generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  password  String
  role      Role     @default(DOCTOR)
  clinic    String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  payments  Payment[]
  chats     Chat[]
}

model Medicine {
  id          String   @id @default(cuid())
  name        String
  company     String
  batchNumber String
  expiryDate  DateTime
  rate        Float
  mrp         Float
  stock       Int
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  status      OrderStatus @default(PENDING)
  totalAmount Float
  deliveryBoy String?
  otp         String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  items       OrderItem[]
  payments    Payment[]
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  order      Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  medicineId String
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  quantity   Int
  price      Float
}

model Payment {
  id          String       @id @default(cuid())
  orderId     String?
  order       Order?       @relation(fields: [orderId], references: [id])
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  amount      Float
  method      PaymentMethod
  status      PaymentStatus @default(PENDING)
  dueAmount   Float        @default(0)
  createdAt   DateTime     @default(now())
}

model Chat {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  DOCTOR
  ADMIN
  DELIVERY
}

enum OrderStatus {
  PENDING
  PACKED
  SHIPPED
  DELIVERED
}

enum PaymentMethod {
  CASH
  CARD
  UPI
  NET_BANKING
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}